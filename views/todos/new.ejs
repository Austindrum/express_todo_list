<%- include("../partials/header") %>
<div class="">
    <h2 class="border-bottom border-dark p-2 mb-3"><i class="fas fa-clipboard-list"></i>   新增代辦事項</h2>
    <form action="/todos" method="POST">
        <div class="form-group">
            <label for="title">事件名稱</label>
            <input type="text" class="form-control" id="title" name="title">
        </div>
        <div class="form-group">
            <label for="comment">備註</label>
            <textarea id="comment" cols="10" rows="5" class="form-control" name="comment"></textarea>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="important" name="important">
                <label class="form-check-label" for="important">
                    重要
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">建立</button>
    </form>
</div>
<%- include("../partials/footer") %>